<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @transaction.user.name %>
</p>

<p>
  <strong>From amount:</strong>
  <%= @transaction.from_amount %>
</p>

<p>
  <strong>From currency:</strong>
  <%= @transaction.fromcurrency.name %>
</p>

<p>
  <strong>To amount:</strong>
  <%= @transaction.to_amount %>
</p>

<p>
  <strong>To currency:</strong>
  <%= @transaction.tocurrency.name %>
</p>

<p>
  <strong>Created Date:</strong>
  <%= @transaction.created_at %>
</p>

<p>
  <strong>Status</strong>
  <% if @transaction.status == 1 %>
    <%= "pending" %>
  <% elsif @transaction.status == 2 %>
    <%= "Completed" %>
  <% elsif @transaction.status == 3 %>
    <%= "Rejected" %>
  <% end%>
</p>

<%= link_to 'Edit', edit_transaction_path(@transaction) %> |
<%= link_to 'Back', transactions_path %>
